<Page x:Class="GameLauncher.View.HSPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameLauncher.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HSPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="Fill"
               Source="Resources/TopBackground/TopHs.png"/>

        <Image Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="Fill" 
               Source="Resources/Background/MainHS.png"/>
    </Grid>
</Page>
